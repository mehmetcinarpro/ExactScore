@model IEnumerable<ExactScore.Data.Entities.Prediction>

@{
    ViewData["Title"] = "Index";
}

<h1>Predictions</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fixture)
            </th>
            <th>
                Prediction
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Point)
            </th>
            <th>
                User
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fixture.Name)
                </td>
                <td>
                    @item.HomeGoal - @item.AwayGoal
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Point)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdentityUser.Email)
                </td>
                <td>
                    @if (!item.Fixture.Round.Closed)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
